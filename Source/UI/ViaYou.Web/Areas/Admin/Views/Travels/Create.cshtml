@model ViaYou.Web.Areas.Admin.Models.TravelViewModel


@{
    ViewBag.Title = "Create Travel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <h4>
        Create Travel
    </h4><hr/>

    @Html.EditorForModel("TravelViewModel")
      
    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <div class="col-md-offset-2">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>


    </div>

   
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section specific_scripts{
    
    <script>
        $(function () {

            $('#CityOriginId')
            .select2({
                placeholder: 'Select an origin city...'
            });
        });

        $(function () {

            $('#CityDestinationId')
            .select2({
                placeholder: 'Select a destination city...'
            });
        });

    </script>

}
